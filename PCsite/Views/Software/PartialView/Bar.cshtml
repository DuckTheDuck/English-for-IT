@model string
@{
    var softwareItems = new List<(string Id, string Name, string Desc, string Icon)>
    {
        ("OS", "Os", "System Core", "💻"),
        ("BRW", "Web Browser", "Internet Access", "🌐"),
        ("TX", "Text Editor", "Editing Tools", "📝"),
        ("DB", "Database", "Data Storage", "🗄️"),
        ("PASS", "Password", "Credential Storage", "🔐"),
        ("AV", "Antivirus", "System Protection", "🛡️"),
        ("FW", "Firewall", "Security Rules", "🚧"),
        ("CLOUD", "Cloud Storage", "File Backup", "☁️"),
        ("PKG", "Package", "Software Install", "📦"),
        ("TASK", "Task Manager", "System Monitor", "📊"),
        ("TERM", "Terminal", "Command Tools", "🖥️"),
        ("VM", "Virtual", "Emulation Software", "📀"),
        ("VPN", "VPN", "Private Internet Network", "🔒"),
        ("ARCH", "Archiver", "File Compression", "🗜️"),
        ("CFG", "Settings", "System Config", "⚙️")
    };
}

<div class="bar">
    @{
        for (int i = 0; i < 3; i++)
        {
            <ul class="component-list">
                @for (int a = 0; a < 5; a++)
                {
                    <li>
                        <button id="" onclick="loadPartial('@softwareItems[(a + (i * 5))].Id')" class="component-btn">
                            <div class="btn-label">
                                <span class="btn-main">@softwareItems[(a + (i * 5))].Name</span>
                                <span class="btn-desc">@softwareItems[(a + (i * 5))].Desc</span>
                            </div>
                        </button>
                    </li>
                }
            </ul>
        }

    }
</div>
<script>
    //setActiveMenu("@Model");
</script>


<style>
    .bar{
        display: flex;
        flex-direction: row;
        background-color: #362E50;
        height: 70%;
        width: 100%;
        border-radius: 10px;
        align-items: center;
        padding: 20px;
        box-sizing: border-box;
        margin-top: 10px;
    }

    .lable{
        font-weight: 700;
        font-size: 1.7rem;
        color: white;
        margin-top: 15px;
        margin-bottom: 5px;
    }

    .component-list {
        list-style: none;
        padding: 0;
        margin: 0;
        display: flex;
        flex-direction: column;
        gap: 12px;
        width: 250px;
    }
    .component-btn {
        width: 150px;
        background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
        color: white;
        font-weight: 700;
        font-size: 1rem;
        padding: 14px;
        border-radius: 12px;
        border: none;
        cursor: pointer;
        position: relative;
        overflow: hidden;
        text-align: center;
        transition: all 0.4s cubic-bezier(0.4, 0, 0.2, 1);
        display: flex;
        /*flex-direction: row-reverse;*/
        align-items: center;
        gap: 12px;
        box-shadow: 0 4px 15px rgba(102, 126, 234, 0.5);
        border: 1px solid;
        border-color: white;
        white-space: nowrap;
        height: 55px;
    }

        .component-btn::before {
            content: '';
            position: absolute;
            top: 0;
            left: -100%;
            width: 100%;
            height: 100%;
            background: linear-gradient(90deg, transparent, rgba(255, 255, 255, 0.2), transparent);
            transition: left 0.5s;
        }

        .component-btn:active {
            transform: translateX(8px) scale(0.98);
        }

        .component-btn.active {
            width: 100%;
            background: linear-gradient(135deg, #764ba2 0%, #667eea 100%);
            box-shadow: 0 8px 25px rgba(102, 126, 234, 0.5);
        }

    .btn-label {
        display: flex;
        flex-direction: column;
        gap: 4px;
        align-items: flex-start;
        flex: 1;
    }

    .btn-main {
        font-size: 1.1rem;
        font-weight: 700;
        letter-spacing: 0.5px;
    }

    .btn-desc {
        font-size: 0.8rem;
        opacity: 0;
        max-height: 0;
        overflow: hidden;
        font-weight: 400;
        transition: all 0.3s ease;
    }

    .component-btn:hover .btn-desc,
    .component-btn.active .btn-desc {
        opacity: 0.85;
        max-height: 50px;
    }

    .btn-icon {
        width: 40px;
        height: 40px;
        background: rgba(255, 255, 255, 0.15);
        border-radius: 10px;
        display: none;
        align-items: center;
        justify-content: center;
        font-size: 1.3rem;
        transition: all 0.3s;
        backdrop-filter: blur(10px);
    }

    .component-btn:hover .btn-icon,
    .component-btn.active .btn-icon {
        display: flex;
    }

    .component-btn:hover .btn-icon {
        background: rgba(255, 255, 255, 0.25);
        transform: rotate(360deg);
    }
</style>

