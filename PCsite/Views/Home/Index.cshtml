@{
    ViewData["Title"] = "Home Page";
}
@{
    var softwareItems = new List<(string Id, string Name, string Desc, string Icon)>
    {
        ("OS", "Operating System", "System Core", "💻"),
        ("BRW", "Web Browser", "Internet Access", "🌐"),
        ("TX", "Text Editor", "Editing Tools", "📝"),
        ("DB", "Database", "Data Storage", "🗄️"),
        ("PASS", "Password Manager", "Secure Credential Storage", "🔐"),
        ("AV", "Antivirus", "System Protection", "🛡️"),
        ("FW", "Firewall", "Security Rules", "🚧"),
        ("CLOUD", "Cloud Storage", "File Backup", "☁️"),
        ("PKG", "Package Manager", "Software Install", "📦"),
        ("TASK", "Task Manager", "System Monitor", "📊"),
        ("TERM", "Terminal", "Command Tools", "🖥️"),
        ("VM", "Virtual Machine", "Emulation Software", "📀"),
        ("VPN", "VPN", "Private Internet Network", "🔒"),
                ("ARCH", "Archiver", "File Compression", "🗜️"),
        ("CFG", "Settings", "System Config", "⚙️")
    };
}

<link rel="stylesheet" href="~/css/" asp-append-version="true" />
<script src="~/js/home.js"></script>

<div class="content">
    <div class="content-holder">
        <div class="software-square"> 
            <div class="software-top" style="color: white; font-size: 48px;">
                IT terms Options
            </div>
            <div class="software-bottom">
                @{
                    for (int i = 0; i < 3; i++){
                        <ul class="component-list">
                        @for (int a = 0; a < 5; a++)
                        {
                            <li>
                                    <button id="" onclick="window.location.href='/Software/Index?view=@softwareItems[(a + (i * 5))].Id'" class="software-btn">
                                    <div class="btn-label">
                                            <span class="btn-main">@softwareItems[(a + (i * 5))].Name</span>
                                            <span class="btn-desc">@softwareItems[(a + (i * 5))].Desc</span>
                                    </div>
                                        <div class="btn-icon">@softwareItems[(a + (i * 5))].Icon</div>
                                </button>
                            </li>
                        }
                        </ul>
                    }

                }
            </div>
        </div>

        <div class="hardware-square">
            <div class="hardware-top">
                <div class="video-box" onclick="window.location.href='/Hardware/Index?view=Pc'">
                    <video id="myVideo" loop muted autoplay playsinline disablepictureinpicture
                           style="width: 100%; height: 100%; object-fit: contain; border-radius: 10px;">
                        <source src="~/videos/lightpurplegoodvid.mp4" type="video/mp4" />
                        Seu navegador não suporta o vídeo.
                    </video>
                </div>
            </div>
            <div class="hardware-bottom">
                <div class="labels-right">
                    <ul class="component-list">
                        <li>
                            <button onclick="window.location.href='/Hardware/Index?view=CPU'" class="component-btn">
                                <div class="btn-label">
                                    <span class="btn-main">CPU</span>
                                    <span class="btn-desc">Processor</span>
                                </div>
                                <div class="btn-icon">🔲</div>
                            </button>
                        </li>
                        <li>
                            <button onclick="window.location.href='/Hardware/Index?view=GPU'" class="component-btn">
                                <div class="btn-label">
                                    <span class="btn-main">GPU</span>
                                    <span class="btn-desc">Graphics card</span>
                                </div>
                                <div class="btn-icon">🎮</div>
                            </button>
                        </li>
                        <li>
                            <button onclick="window.location.href='/Hardware/Index?view=PSU'" class="component-btn">
                                <div class="btn-label">
                                    <span class="btn-main">PSU</span>
                                    <span class="btn-desc">Power supply</span>
                                </div>
                                <div class="btn-icon">⚡</div>
                            </button>
                        </li>
                        <li>
                            <button onclick="window.location.href='/Hardware/Index?view=Ram'" class="component-btn">
                                <div class="btn-label">
                                    <span class="btn-main">RAM</span>
                                    <span class="btn-desc">volatile memory</span>
                                </div>
                                <div class="btn-icon">💾</div>
                            </button>
                        </li>
                        <li>
                            <button onclick="window.location.href='/Hardware/Index?view=Motherboard'" class="component-btn">
                                <div class="btn-label">
                                    <span class="btn-main">MB</span>
                                    <span class="btn-desc">Motherboard</span>
                                </div>
                                <div class="btn-icon">🔧</div>
                            </button>
                        </li>
                        <li>
                            <button onclick="window.location.href='/Hardware/Index?view=HardDrive'" class="component-btn">
                                <div class="btn-label">
                                    <span class="btn-main">Storage</span>
                                    <span class="btn-desc">Hard Drive & soft Drive</span>
                                </div>
                                <div class="btn-icon">💽</div>
                            </button>
                        </li>
                        <li>
                            <button onclick="window.location.href='/Hardware/Index?view=Case'" class="component-btn">
                                <div class="btn-label">
                                    <span class="btn-main">Case</span>
                                    <span class="btn-desc">Computer case</span>
                                </div>
                                <div class="btn-icon">🖥️</div>
                            </button>
                        </li>
                    </ul>
                </div>
            </div> 
        </div>
    </div>
</div>

<script>
    const video = document.getElementById('myVideo');
    const hardwareTop = document.querySelector('.hardware-top');

    hardwareTop.addEventListener('mouseenter', () => {
        video.pause();
        video.currentTime = 0;
    });

    hardwareTop.addEventListener('mouseleave', () => {
        video.play();
    });
</script>

